# MCP Hub Integration Environment Configuration
# Copy this file to .env and update with your actual values

# GitHub MCP Integration
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_token_here
GITHUB_TOOLSETS=repos,issues,pull_requests,actions,context,code_security
GITHUB_MCP_USE_DOCKER=true

# Supabase Integration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Optional: Claude MCP Integration (if using)
CLAUDE_MCP_URL=http://localhost:8081/mcp
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: OpenAI Integration
OPENAI_API_KEY=your_openai_key_here

# Optional: Zapier Integration
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url_here

# Server Configuration
PORT=8080
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here

# Optional: Authentication Configuration
AUTH_OPTIONAL=true

# Optional: Storage Configuration
STORAGE_DIR=./storage

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/mcp-hub.log

